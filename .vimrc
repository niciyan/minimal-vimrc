set fileencoding=utf-8
set number
set title
set nowrap
set hlsearch
set tabstop=4
set shiftwidth=4
set softtabstop=4
set hidden
set splitright
set splitbelow
set autochdir
set clipboard=unnamed,autoselect
set noswapfile
set nobackup
set noundofile
set ignorecase
set smartcase
set incsearch 
set wildmenu

set background=dark
set runtimepath+=~/.vim/nerdtree

nnoremap zj <C-w>j
nnoremap zk <C-w>k
nnoremap zh <C-w>h
nnoremap zl <C-w>l
nnoremap zJ <C-w>J
nnoremap zK <C-w>k
nnoremap zH <C-w>H
nnoremap zL <C-w>L
nnoremap <Space>z gUaw

syntax on
filetype plugin indent on

